@using NuGet.Server.Infrastructure.Lucene
@model IndexingStatus

<p>Indexer status: @Model.State</p>
@if(Model.PackagesToIndex > 0)
{
    <p>Indexing @Model.CompletedPackages of @Model.PackagesToIndex new packages.</p>
    if(Model.CurrentPackagePath != null)
    {
      <p>Current package: @Model.CurrentPackagePath</p>   
    }
}
